          ] /}
        {/call}
      </div>
    </div>
  {/param}
{/call}
{/template}

/**
 * @param items
 */
{template .examples}
  <div class="grid">
    {foreach $item in $items}
      <figure class="effect">
        <img src="{$item.image}" alt="">
        <figcaption>
          <h2>{$item.name}</h2>
          <p>{$item.description}</p>
          <a href="{$item.url}">View more</a>
        </figcaption>
      </figure>
    {/foreach}
  </div>
{/template}
