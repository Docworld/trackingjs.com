{namespace index}

/**
 * This template will be rendered by SoyWeb when the user loads static.soy.
 * It deliberately includes dummy data so the designer can get a feel for how
 * the task list will appear with real data rather with minimal copy and paste.
 */
{template .soyweb}
{call main.page}
  {param baseDir: './' /}
  {param content}
    <link rel="stylesheet" href="styles/home-grid.css">

    {call menu.side}
      {param baseDir: './' /}
      {param cssScope: 'index' /}
    {/call}

    <div id="main">
      <div class="header">
        <h1>tracking.js</h1>
        <h2>A modern approach for Computer Vision on the web</h2>
      </div>

      <div class="content">
        <p>
          The tracking.js library brings different computer vision algorithms and techniques into the browser environment. By using modern HTML5 specifications, we enable you to do real-time color tracking, face detection and much more with a simple and intuitive interface. <a href="docs.html">Learn more &raquo;</a>
        </p>
        <pre class="code-install"><code class="nohighlight">bower install tracking.js</code></pre>
        <p class="gh-btns">
          <iframe src="./github-btn.html?user=eduardolundgren&amp;repo=tracking.js&amp;type=watch&amp;count=true&amp;size=large" allowtransparency="true" frameborder="0" scrolling="0" width="135" height="30"></iframe>
          <iframe src="./github-btn.html?user=eduardolundgren&amp;repo=tracking.js&amp;type=fork&amp;count=true&amp;size=large" allowtransparency="true" frameborder="0" scrolling="0" width="135" height="30"></iframe>
        </p>
        <p class="btn-download-container">
          <a class="pure-button pure-button-primary btn-download" href="https://github.com/eduardolundgren/tracking.js/archive/master.zip">
            <img class="btn-download-icon" src="./images/app/download.svg" width="20" height"20" alt="Download Icon">Download tracking.js
          </a>
        </p>
      </div>

      <div class="content">
        {call .examples}
          {param items: [
            [
              'name': 'Tag Friends',
              'description': 'A simple friend tagging application that is easy to build and friendly to use',
              'image': 'images/app/tag_friends.jpg',
              'url': './examples/face_tag_friends.html'
            ],
            [
              'name': 'Iron Spheres',
              'description': 'Go into the future and explore Campo Di Fiori in Italy by just moving your head in the desired direction',
              'image': 'images/app/iron_spheres.jpg',
              'url': './examples/face_fish_tank.html'
            ],
            [
              'name': 'Racing Car',
              'description': 'Race against the clock using your own car wheel in this color tracking game',
              'image': 'images/app/racing_car.jpg',
              'url': './examples/color_hexgl.html'
            ],
            [
              'name': 'Draw<br>Something',
              'description': 'Limitless drawing through colored objects',
              'image': 'images/app/draw_something.jpg',
              'url': './examples/color_draw_something.html'
            ],
            [
              'name': 'Random<br>Particles',
              'description': 'Look around a scene built with threejs, changing perspective by using colors',
              'image': 'images/app/random_particles.jpg',
              'url': './color_fish_tank.html'
            ],
            [
              'name': 'Create<br>your own',
              'description': 'Bring all the power of computer vision to your applications',
              'image': 'images/app/github_repo.jpg',
              'url': 'https://github.com/eduardolundgren/tracking.js'
            ]
          ] /}
        {/call}
      </div>
    </div>
  {/param}
{/call}
{/template}

/**
 * @param items
 */
{template .examples}
  <div class="grid">
    {foreach $item in $items}
      <figure class="effect">
        <img src="{$item.image}" alt="">
        <figcaption>
          <h2>{$item.name|noAutoescape}</h2>
          <p>{$item.description}</p>
          <a href="{$item.url}">View more</a>
        </figcaption>
      </figure>
    {/foreach}
  </div>
{/template}
